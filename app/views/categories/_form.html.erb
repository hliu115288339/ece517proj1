<%= form_for(@category) do |f| %>
    <%= render 'layouts/error_messages', object: f.object %>

    <div class="row">
        <div class="span6 offset3">
            <%= f.label :name %>
            <%= f.text_field :name %>

            <%= f.submit class: "btn btn-large btn-primary" %>
        </div>
    </div>
<% end %>
