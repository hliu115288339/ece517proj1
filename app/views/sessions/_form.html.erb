<%= form_for(:session, url: sessions_path) do |f| %>

    <div class="field">
      <%=  f.label :username_or_email %><br/>
      <%=  f.text_field :username_or_email %>
    </div>

    <div class="field">
      <%= f.label :password %><br/>
      <%= f.password_field :password %>
    </div>

    <div class="actions">
        <%= f.submit "Log in" %>
    </div>

    <p>New user? <%= link_to "Sign up!", signup_path %></p>
<% end %>
