<div class="row">
  <div class="span6 offset3">
    <%= form_for(@post) do |f| %>
        <%= render 'layouts/error_messages', object: f.object %>

        <%= f.label :title %>
        <%= f.text_field :title %>

        <%= f.label :category %>
        <%= select("post", "category_id", Category.all.collect{ |c| [ c.name, c.id] }) %>

        <%= f.label :content %>
        <%= f.text_area :content %>

        <%= f.submit class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
